<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context="prashushi.farcon.AddressActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/MyMaterialTheme.PopupOverlay" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:id="@+id/et_name"
        android:background="@drawable/rectangle_card"/>
        <EditText
            android:id="@+id/et_phone"
            android:hint="PhoneNo"
            android:inputType="number"
            android:maxLength="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectangle_card"/>

        <EditText
            android:hint="No Of Family Members"
            android:maxLength="2"
            android:id="@+id/et_member"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectangle_card"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address (Optional)"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:id="@+id/et_email"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rectangle_card"/>


<!--        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="5">

-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use My Location"
            android:textColor="@color/white"
            android:id="@+id/bt_loc"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button"
            style="@style/MyButton" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="HouseNo"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/et_house"
                android:background="@drawable/rectangle_card"/>

            <EditText
                android:hint="Street"
                android:id="@+id/et_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rectangle_card"/>
            <EditText
                android:hint="Area"
                android:id="@+id/et_area"
                android:maxLines="1"
                android:maxLength="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rectangle_card"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PinCode"
                android:inputType="number"
                android:maxLength="6"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/et_pin"
                android:background="@drawable/rectangle_card"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:layout_gravity="center_horizontal"
            android:id="@+id/et_city"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectangle_card"/>



        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
                android:id="@+id/et_state"
                android:layout_weight="1"
                android:background="@drawable/rectangle_card"/>
            </LinearLayout>

    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHECKOUT"
        android:id="@+id/tv_order"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        style="@style/MyButton"
        />

</RelativeLayout>
